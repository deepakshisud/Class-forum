<% layout('boilerplate') %> 
<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
      <h1 class="display-4">Class Forum</h1>
      <p class="lead">An integrated tab to discuss all your class related quries and post your doubts!</p>
      <a href="/new" class="btn btn-secondary">New question</a>
    </div>
  </div>
<div class="container">
    <h1>All questions</h1>
    <hr>
    <% for( let i = posts.length - 1; i >=0 ; i--) { %>
        <div class="my-3" style="border-left: 5px solid gray; padding-left: 3%;">
            <h3><%= posts[i].heading  %> </h3>
            <p><%=posts[i].text  %> </p>
        </div>
        <a href="/<%= posts[i]._id%>" class="btn btn-secondary ml-4">View</a>
    <% } %>
</div>