<% layout('boilerplate') %> 
<div class="container mt-5">
  <h1>Create a new discussion</h1>
  <form method="POST" novalidate class="validate-form">
    <div class="form-group">
      <label for="text">Heading</label>
      <input type="text" class="form-control" name="post[heading]" id="heading">
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="form-group">
      <label for="text">Enter your Query here</label>
      <input type="text" class="form-control" name="post[text]" id="text">
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <button class="btn btn-secondary">POST</button>
</form>
</div>
